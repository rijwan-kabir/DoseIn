<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Spinner?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            fx:controller="com.momentum.dosein.controller.CostEstimatorController"
            stylesheets="@../css/dashboard.css"
            styleClass="dashboard-root"
            prefWidth="1000" prefHeight="700">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox fx:id="navHeader" styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>
                    <Label text="Doseln" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-item-schedule">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Cost Estimator" onAction="#handleCostEstimator" styleClass="nav-button-active">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calculator-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-item-contacts">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox styleClass="main-content" spacing="25">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Header -->
            <VBox spacing="8">
                <Label text="Cost Estimator" styleClass="page-title"/>
                <Label text="Search for medicines and calculate total costs" styleClass="page-subtitle"/>
            </VBox>

            <!-- Main Content Area -->
            <HBox spacing="30" VBox.vgrow="ALWAYS">
                <!-- Left Side - Medicine Search -->
                <VBox spacing="15" prefWidth="350" HBox.hgrow="NEVER">
                    <VBox spacing="10" styleClass="content-card">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <Label text="Search Medicines" styleClass="card-title"/>
                        
                        <TextField fx:id="searchField" promptText="Search by medicine name..." styleClass="search-field"/>
                        
                        <VBox spacing="8">
                            <Label text="Available Medicines" styleClass="section-label"/>
                            <ListView fx:id="medicineListView" prefHeight="250" styleClass="medicine-list"/>
                        </VBox>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Quantity:" styleClass="field-label"/>
                            <Spinner fx:id="quantitySpinner" prefWidth="80" styleClass="quantity-spinner"/>
                            <Button fx:id="addToCartButton" text="Add to Cart" onAction="#handleAddToCart" 
                                    styleClass="add-button" prefWidth="100"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Right Side - Shopping Cart -->
                <VBox spacing="15" HBox.hgrow="ALWAYS">
                    <VBox spacing="10" styleClass="content-card" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>

                        <Label text="Shopping Cart" styleClass="card-title"/>

                        <TableView fx:id="cartTableView" VBox.vgrow="ALWAYS" styleClass="cart-table">
                            <columns>
                                <TableColumn fx:id="medicineNameColumn" text="Medicine" prefWidth="150"/>
                                <TableColumn fx:id="quantityColumn" text="Qty" prefWidth="60"/>
                                <TableColumn fx:id="priceColumn" text="Price" prefWidth="80"/>
                                <TableColumn fx:id="totalColumn" text="Total" prefWidth="80"/>
                            </columns>
                        </TableView>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button fx:id="removeFromCartButton" text="Remove Selected" onAction="#handleRemoveFromCart" 
                                    styleClass="remove-button"/>
                            <Button fx:id="clearCartButton" text="Clear Cart" onAction="#handleClearCart" 
                                    styleClass="clear-button"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label fx:id="totalCostLabel" text="Total: $0.00" styleClass="total-label"/>
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>