<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600" prefWidth="800" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/doctor_info.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.DoctorInfoController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox prefWidth="200" spacing="15" styleClass="nav-bar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <!-- Logo and App Name -->
            <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="12" styleClass="nav-header">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="logo-container">
                    <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <Image url="@../images/logo.png" />
                    </ImageView>
                    <Label styleClass="nav-logo" text="DoseIn" />
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button onAction="#handleDashboard" styleClass="nav-item" text="Dashboard">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleManageSchedule" styleClass="nav-item-schedule" text="Manage Schedule">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleCostEstimator" styleClass="nav-item" text="Cost Estimator">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/calculator-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleDoctorContacts" styleClass="nav-item-contacts" text="Doctor Contacts">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleEmergency" styleClass="nav-item" text="Emergency">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleAboutUs" styleClass="nav-item" text="About Us">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <VBox styleClass="signout-container">
                <Button onAction="#handleSignOut" styleClass="nav-signout" text="Sign Out">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" spacing="15" styleClass="doctor-info-root">
            <!-- Doctor Information Card -->
            <VBox fx:id="doctorInfoCard" alignment="TOP_LEFT" prefHeight="600.0" prefWidth="520.0" spacing="12" styleClass="doctor-info-card">
                <padding>
                    <Insets bottom="18" left="30" right="30" top="18" />
                </padding>

                <!-- Title -->
                <Label styleClass="card-title" text="Doctor Information" />

                <!-- Doctor Information Fields -->
                <VBox spacing="12" styleClass="info-fields-container">
                    <!-- Name -->
                    <VBox spacing="3">
                        <Label styleClass="field-label" text="Name :" />
                        <Label fx:id="nameLabel" styleClass="info-value" />
                    </VBox>

                    <!-- Specialty -->
                    <VBox spacing="3">
                        <Label styleClass="field-label" text="Specialty :" />
                        <Label fx:id="specialtyLabel" styleClass="info-value" />
                    </VBox>

                    <!-- Phone -->
                    <VBox spacing="3">
                        <Label styleClass="field-label" text="Phone :" />
                        <Label fx:id="phoneLabel" styleClass="info-value" />
                    </VBox>

                    <!-- Email -->
                    <VBox spacing="3">
                        <Label styleClass="field-label" text="Email :" />
                        <Label fx:id="emailLabel" styleClass="info-value" />
                    </VBox>

                    <!-- Location -->
                    <VBox spacing="3">
                        <Label styleClass="field-label" text="Location :" />
                        <Label fx:id="locationLabel" styleClass="info-value" />
                    </VBox>

                    <!-- Additional Information -->
                    <VBox spacing="3">
                        <Label styleClass="field-label" text="Additional Information :" />
                        <Label fx:id="noteLabel" styleClass="info-value" wrapText="true" />
                    </VBox>
                </VBox>
            </VBox>

            <!-- Bottom Action Buttons (Outside of card) -->
            <HBox alignment="CENTER" prefHeight="82.0" prefWidth="520.0" spacing="5.0" styleClass="action-buttons-container">
                <Button onAction="#handleGoBack" styleClass="go-back-button" text="Go Back" />
                <Button onAction="#handleDelete" styleClass="delete-button" text="Delete" />
            </HBox>
        </VBox>
    </center>
</BorderPane>