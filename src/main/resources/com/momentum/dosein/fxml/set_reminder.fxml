<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600" prefWidth="800" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/set_reminder.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.SetReminderController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox prefWidth="200" spacing="15" styleClass="nav-bar">
            <padding>
                <Insets bottom="20" left="15" right="15" top="20" />
            </padding>

            <!-- Logo and App Name -->
            <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="12" styleClass="nav-header">
                <HBox alignment="CENTER_LEFT" spacing="12" styleClass="logo-container">
                    <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                        <Image url="@../images/logo.png" />
                    </ImageView>
                    <Label styleClass="nav-logo" text="DoseIn" />
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button onAction="#handleDashboard" styleClass="nav-item" text="Dashboard">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleManageSchedule" styleClass="nav-item-schedule" text="Manage Schedule">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleCostEstimator" styleClass="nav-item" text="Cost Estimator">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/calculator-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleDoctorContacts" styleClass="nav-item-contacts" text="Doctor Contacts">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleEmergency" styleClass="nav-item" text="Emergency">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>

                <Button onAction="#handleAboutUs" styleClass="nav-item" text="About Us">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <VBox styleClass="signout-container">
                <Button onAction="#handleSignOut" styleClass="nav-signout" text="Sign Out">
                    <graphic>
                        <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" spacing="15" styleClass="reminder-root">
            <!-- First Card: Medicine Information -->
            <VBox fx:id="medicineCard" alignment="TOP_LEFT" prefHeight="600.0" prefWidth="520.0" spacing="12" styleClass="medicine-info-card">
                <padding>
                    <Insets bottom="18" left="30" right="30" top="18" />
                </padding>

                <!-- Title -->
                <Label styleClass="card-title" text="Add Medicine Information" />

                <!-- Name Field -->
                <VBox spacing="3">
                    <Label styleClass="field-label" text="Name :" />
                    <TextField fx:id="nameField" prefHeight="28.0" promptText="Enter medicine name" styleClass="medicine-field" />
                </VBox>

                <!-- Start and End Date Fields (Side by Side) -->
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <VBox spacing="3" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Start Date :" />
                        <DatePicker fx:id="startDatePicker" prefHeight="28.0" styleClass="medicine-field" />
                    </VBox>
                    <VBox spacing="3" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="End Date :" />
                        <DatePicker fx:id="endDatePicker" prefHeight="28.0" styleClass="medicine-field" />
                    </VBox>
                </HBox>

                <!-- Additional Information Field -->
                <VBox spacing="3">
                    <Label styleClass="field-label" text="Additional Information :" />
                    <TextField fx:id="noteField" prefHeight="28.0" promptText="Additional information goes here" styleClass="medicine-field" />
                </VBox>
            </VBox>

            <!-- Second Card: Alert Time -->
            <VBox fx:id="alertTimeCard" alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="175.0" prefWidth="520.0" spacing="8" styleClass="alert-time-card">
                <padding>
                    <Insets bottom="15" left="30" right="30" top="15" />
                </padding>
                <HBox maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="70.0" prefWidth="414.0">
                    <children>

                        <!-- Time Display Area with existing times -->
                        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="39.0" minWidth="-Infinity" prefHeight="70.0" prefWidth="416.0" styleClass="times-display-section">
                            <ScrollPane fitToHeight="true" hbarPolicy="NEVER" maxHeight="75.0" prefHeight="75.0" prefWidth="330.0" styleClass="time-scroll-pane" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                                <HBox fx:id="timeListContainer" spacing="6" styleClass="time-pills-container" />
                                <padding>
                                    <Insets left="10.0" />
                                </padding>
                            </ScrollPane>
                        </VBox>
                    </children>
                </HBox>

                <!-- Time Selector -->
                <HBox alignment="CENTER" prefHeight="45.0" prefWidth="459.0" styleClass="time-selector-container">
                    <!-- Hour:Minute Display with colons -->
                    <HBox alignment="CENTER" prefHeight="58.0" prefWidth="250.0" spacing="3" styleClass="time-display-box">
                        <Spinner fx:id="hourSpinner" editable="true" prefHeight="46.0" prefWidth="100.0" styleClass="time-number-spinner" />
                        <Label styleClass="time-colon" text=":" />
                        <Spinner fx:id="minuteSpinner" editable="true" prefHeight="46.0" prefWidth="100.0" styleClass="time-number-spinner" />
                    </HBox>

                    <!-- AM/PM Buttons -->
                    <VBox alignment="CENTER" spacing="2">
                        <ToggleButton fx:id="amRadio" prefHeight="26.0" prefWidth="60.0" styleClass="am-button" text="AM" />
                        <ToggleButton fx:id="pmRadio" prefHeight="22.0" prefWidth="60.0" styleClass="pm-button" text="PM" />
                    </VBox>

                    <!-- Add/Remove Buttons -->
                    <VBox alignment="CENTER" spacing="2">
                        <Button fx:id="addTimeButton" onAction="#handleAddTime" prefHeight="22.0" prefWidth="90.0" styleClass="add-time-btn" text="Add" />
                        <Button fx:id="removeTimeButton" onAction="#handleRemoveTime" prefHeight="22.0" prefWidth="90.0" styleClass="remove-time-btn" text="Remove" />
                    </VBox>
                </HBox>
            </VBox>

            <!-- Bottom Action Buttons (Outside of cards) -->
            <HBox alignment="CENTER" prefHeight="82.0" prefWidth="520.0" spacing="5.0" styleClass="action-buttons-container">
                <Button onAction="#handleCancel" styleClass="cancel-button" text="Cancel" />
                <Button onAction="#handleSetReminder" styleClass="set-reminder-button" text="Set Reminder" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
