<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/manage_schedule.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.ManageScheduleController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>
                    <Label text="Doseln" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-button-active">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-item-contacts">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="25" styleClass="main-content">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Header Card -->
            <VBox styleClass="welcome-card" spacing="0">
                <HBox styleClass="welcome-banner" spacing="20" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>

                    <VBox spacing="8">
                        <Label text="Manage Schedule" styleClass="greeting-text"/>
                        <Label text="Stay on track with your Medication" styleClass="slogan-text"/>
                    </VBox>

                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>

            <!-- Main Content Card -->
            <VBox styleClass="schedule-card" spacing="20" prefWidth="720" minWidth="720">
                <padding>
                    <Insets top="25" right="25" bottom="25" left="25"/>
                </padding>

                <HBox alignment="TOP_LEFT" spacing="40" prefWidth="670">
                    <!-- Active Alerts Section -->
                    <VBox spacing="15" styleClass="active-alerts-container" prefWidth="230" minWidth="230" maxWidth="230">
                        <Label styleClass="section-title" text="Active Alerts" />
                        
                        <!-- Dynamic Medicine Buttons Container -->
                        <VBox fx:id="medicineButtonsContainer" spacing="8" styleClass="medicine-buttons-container">
                            <!-- Medicine buttons will be added dynamically -->
                        </VBox>
                        
                        <!-- Empty State Label -->
                        <Label fx:id="emptyStateLabel" text="No reminders set yet.\nGo to Set Reminder to add medicines." 
                               styleClass="empty-state-label" visible="false" wrapText="true"/>
                    </VBox>

                    <!-- Medicine Information Panel -->
                    <VBox spacing="15" styleClass="medicine-info-container" prefWidth="400" minWidth="400" maxWidth="400">
                        <Label styleClass="section-title" text="Medicine Information" />

                        <VBox spacing="15" styleClass="medicine-info-grid">
                            <!-- Name -->
                            <HBox spacing="15">
                                <Label text="Name :" styleClass="info-label" prefWidth="120"/>
                                <Label fx:id="nameLabel" text="Select a medicine to view details" styleClass="info-value" wrapText="true"/>
                            </HBox>
                            
                            <!-- Start Date -->
                            <HBox spacing="15">
                                <Label text="Start Date :" styleClass="info-label" prefWidth="120"/>
                                <Label fx:id="startDateLabel" text="-" styleClass="info-value"/>
                            </HBox>
                            
                            <!-- End Date -->
                            <HBox spacing="15">
                                <Label text="End Date :" styleClass="info-label" prefWidth="120"/>
                                <Label fx:id="endDateLabel" text="-" styleClass="info-value"/>
                            </HBox>
                            
                            <!-- Additional Information -->
                            <VBox spacing="8">
                                <Label text="Additional Information :" styleClass="info-label"/>
                                <Label fx:id="noteLabel" text="-" styleClass="info-value" wrapText="true"/>
                            </VBox>
                            
                            <!-- Alert Time -->
                            <VBox spacing="8">
                                <Label text="Alert Time:" styleClass="info-label"/>
                            </VBox>
                        </VBox>

                        <!-- Alert Time Buttons -->
                        <HBox fx:id="timesBox" spacing="10" styleClass="alert-times-container">
                            <!-- Time buttons will be added dynamically -->
                        </HBox>

                        <!-- Delete Button -->
                        <HBox alignment="CENTER_RIGHT" styleClass="delete-container">
                            <Button text="Delete" onAction="#handleDelete" styleClass="delete-button" prefWidth="120">
                                <graphic>
                                    <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                        <Image url="@../images/delete-icon.png"/>
                                    </ImageView>
                                </graphic>
                            </Button>
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
