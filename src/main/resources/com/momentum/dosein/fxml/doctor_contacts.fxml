<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="rootPane" prefHeight="700" prefWidth="1000" styleClass="dashboard-root" stylesheets="@../css/dashboard.css,@../css/doctor_contacts.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.momentum.dosein.controller.DoctorContactsController">

    <!-- LEFT NAVIGATION -->
    <left>
        <VBox styleClass="nav-bar" spacing="15" prefWidth="200">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <!-- Logo and App Name -->
            <HBox styleClass="nav-header" alignment="CENTER_LEFT" spacing="12" prefHeight="70">
                <HBox styleClass="logo-container" alignment="CENTER_LEFT" spacing="12">
                    <ImageView fitWidth="30" fitHeight="30" preserveRatio="true">
                        <Image url="@../images/logo.png"/>
                    </ImageView>
                    <Label text="Doseln" styleClass="nav-logo"/>
                </HBox>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu-container">
                <Button text="Dashboard" onAction="#handleDashboard" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/dashboard-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Manage Schedule" onAction="#handleManageSchedule" styleClass="nav-item-schedule">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/calendar-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Doctor Contacts" onAction="#handleDoctorContacts" styleClass="nav-button-active">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/doctor-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="Emergency" onAction="#handleEmergency" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/emergency-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <Button text="About Us" onAction="#handleAboutUs" styleClass="nav-item">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/about-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <VBox styleClass="signout-container">
                <Button text="Sign Out" onAction="#handleSignOut" styleClass="nav-signout">
                    <graphic>
                        <ImageView fitWidth="18" fitHeight="18" preserveRatio="true">
                            <Image url="@../images/signout-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="20" styleClass="main-content">

            <!-- Header -->
            <VBox styleClass="welcome-banner">
                <Label styleClass="manage-title" text="Doctor Contacts" />
                <Region HBox.hgrow="ALWAYS" />
                <Label styleClass="manage-slogan" text="Manage your personal healthcare contacts" />
            </VBox>

            <HBox alignment="TOP_LEFT" spacing="20">
                <!-- Saved Entries List -->
                <VBox spacing="10" styleClass="manage-alerts-pane">
                    <Label styleClass="manage-section-title" text="Saved Entries" />
                    <ListView fx:id="contactsList" prefHeight="300" prefWidth="200" styleClass="manage-listview" />
                </VBox>

                <!-- Doctor Information Panel -->
                <VBox spacing="10" styleClass="manage-info-pane" prefWidth="400" maxWidth="400">
                    <Label styleClass="manage-panel-title" text="Doctor Information" />

                    <GridPane hgap="10" vgap="10">
                        <Label styleClass="manage-label" text="Name :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="nameLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label styleClass="manage-label" text="Speciality :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="specialtyLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label styleClass="manage-label" text="Phone :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="phoneLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label styleClass="manage-label" text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="emailLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label styleClass="manage-label" text="Location :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <Label fx:id="locationLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label styleClass="manage-label" text="Additional Information :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <Label fx:id="noteLabel" styleClass="manage-value" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="5" />

                        <columnConstraints>
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                            <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                    </GridPane>

                    <Region VBox.vgrow="ALWAYS"/>

                    <!-- Action Buttons -->
                    <HBox spacing="10" alignment="CENTER" styleClass="action-buttons-container">
                        <Button text="Add"
                                onAction="#handleAdd"
                                styleClass="add-button"
                                prefWidth="120">
                            <graphic>
                                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                    <Image url="@../images/add-icon.png" />
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button text="Delete"
                                onAction="#handleDelete"
                                styleClass="delete-button"
                                prefWidth="120">
                            <graphic>
                                <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                    <Image url="@../images/delete-icon.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
